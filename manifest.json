{
    //"manifest_version" :2,
    
	"name": "test3",
	
	"description": "a test",
	
	"version": "0.1",

	"icons": {
		"16": "images/vm16.png",
		"48": "images/vm48.png",
		"128": "images/vm128.png"
	},
/*	
	"app": {
		"launch": {
			"local_path":"Main.html"
		}
	},
*/
	"browser_action": {
		"default_icon": "images/vm16.png",
		"default_title": "VM",
		"default_popup": "Popup.html"
	},
	

    /*better colours for google groups*/
	"content_scripts": [
		{	
			"matches": [
				"http://groups.google.com/*",
				"https://groups.google.com/*"
			],
			"css": ["scripts/content/googlegroups.css"]
		}
	],
	

	"options_page": "Options.html",
	
    "background_page": "background.html",
	/*
    "background": {
        "page": "background.html"
    },
	*/
	"minimum_chrome_version": "12.0.706.0",
	
	"permissions":[
		"file://*/*",
		"*://*.google.com/*",
		"*://*.googleapis.com/*",
        
		"tts",
		"unlimitedStorage",
		"tabs",
		"notifications",
        
        /*needed for oauth2 stuff*/
		"webRequest",
		"webRequestBlocking",
        
        /*redirect url for Google API project*/
		"http://example.com/oauth/blank.html*",
        
        /*test globs for simple page server*/
        /*needs webRequest api*/
        "*://*.local/*",
        
        //"*://news.eternal-september.org:119/*",
        
		"idle"
	]
}